@model List<MyAcademyCarBook.EntityLayer.Concrete.Car>
@{
    ViewData["Title"] = "Index2";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Araba Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Model</th>
        <th>Kategori</th>
        <th>Marka</th>
        <th>Vites Türü</th>
        <th>Yıl</th>
        <th>Araba Durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Sitede Gör</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <Td>@item.CarID</Td>
            <Td>@item.Model</Td>
            <Td>@item.CarCategory.CategoryName</Td>
            <Td>@item.Brand.BrandName</Td>
            <Td>@item.GearType</Td>
            <Td>@item.Year</Td>
            <Td>@item.CarStatus.CarStatusName</Td>
            <Td><a href="#" class="btn btn-outline-danger">Sil</a></Td>
            <Td><a href="#" class="btn btn-outline-success">Güncelle</a></Td>
            <Td><a href="#" class="btn btn-outline-dark">Detaylar</a></Td>
            <Td><a href="#" class="btn btn-outline-warning">Sitede Gör</a></Td>
        </tr>
    }
</table>
<a href="#" class="btn btn-outline-primary">Yeni Araç Girişi</a>